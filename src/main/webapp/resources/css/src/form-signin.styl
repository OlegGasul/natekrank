.form-signin {
  padding: 15px;

  .form-signin-heading {
    margin-bottom: 10px;
  }
  .checkbox {
    font-weight: normal;
    margin-bottom: 10px;
  }
  .form-control {
    position: relative;
    height: auto;
    box-sizing: border-box;
    padding: 10px;
    font-size: 16px;

    &:focus {
      z-index: 2;
    }
  }

  input {
    margin-top: 10px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  button {
    margin-top: 10px;
  }

  .has-error {
    color: red
  }
}